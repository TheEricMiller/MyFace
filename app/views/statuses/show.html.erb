<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @status.user.full_name %>
</p>

<p>
  <b>Content:</b>
  <%= @status.content %>
</p>

<% if @status.document && @status.document.attachment? %>
	<%= status_document_link @status %>
	<hr />
<% end %>


<%= link_to 'Edit', edit_status_path(@status) if signed_in? && current_user.id == @status.user_id %> |
<%= link_to 'Back', statuses_path %>
